  <div class="container">
    <div class="section">
       <div class="row">
        <div class="col s12 m4">
          <h5 class="center">MY LOKO TAKOS</h5>
            <p class="light">
              <ul>
                {{#each takos}}
                  {{#unless this.devoured}}
                    <li>
                    {{this.id}}. {{this.tako_name}}
                      
                      {{!--<form class="create-update-form" action="/{{this.id}}?_method=PUT" method="POST">--}}
                      <form class="create-update-form" action="/tako/eat/{{this.id}}" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        
                        <input placeholder="Tako Eater" type="text" id="customer_name" name="customer_name">
                        <button class="btn waves-effect waves-light red" type="submit">Eat Me!</button>
                      </form>

                    </li>
                  {{/unless}}
                {{/each}}
              </ul>
            </p>
        </div>

        <div class="col s12 m4">
          <div class="row">
            <h5 class="center">ADD A TAKO</h5>

            
                  <form class="create-update-form" action="/tako/create" method="POST">

                    <div class="form-group">
                      <label for="newTako">Tako Name:</label>
                      <input placeholder="Example: Hangover Special" type="text" id="tako_name" name="tako_name">
                    </div>

                    <button type="submit" class="btn-large waves-effect waves-light green">Add my tako!</button>
                  </form>
          </div>
        </div>
        <div class="col s12 m4">
            <h5 class="center">DEVOURED TAKOS</h5>
              <p class="light">
                  <ul>
                    {{#each takos}}
                      {{#if this.devoured}}
                        <li>
                        {{this.id}}. {{this.tako_name}}   
                        </li>
                      {{/if}}
                    {{/each}}
                  </ul>
              </p>
            </div>
          </div>
        </div>
      </div>  {{!--end container--}}
 

